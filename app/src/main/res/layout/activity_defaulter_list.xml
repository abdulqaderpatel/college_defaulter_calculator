<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".defaulter_list_for_student.DefaulterListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="409dp"
        android:layout_height="640dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">

        <LinearLayout android:id="@+id/rectangle_at_the_top"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:background="#00FF00"
            android:visibility="visible">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Attendance more than 75%"
               android:textColor="#FFFFFF"

               />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:background="#0000FF"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance less than 75% but more than 50%"
                android:textColor="#FFFFFF"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:background="#FF0000"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:text="Attendance less than 50%"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"

                />



        </LinearLayout>

    </LinearLayout>

</LinearLayout>